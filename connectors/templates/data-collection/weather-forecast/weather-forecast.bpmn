<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL" xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" xmlns:dc="http://www.omg.org/spec/DD/20100524/DC" xmlns:camunda="http://camunda.org/schema/1.0/bpmn" xmlns:di="http://www.omg.org/spec/DD/20100524/DI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="Definitions_weather_forecast" targetNamespace="http://bpmn.io/schema/bpmn" exporter="Camunda Modeler" exporterVersion="5.42.0">
  <bpmn:process id="weather-forecast-example" name="Weather Forecast Example" isExecutable="true" camunda:historyTimeToLive="P1D">
    <bpmn:startEvent id="StartEvent_1" name="Start">
      <bpmn:outgoing>Flow_1</bpmn:outgoing>
    </bpmn:startEvent>
    <bpmn:sequenceFlow id="Flow_1" sourceRef="StartEvent_1" targetRef="Activity_InputLocation" />
    <bpmn:userTask id="Activity_InputLocation" name="Enter Location" camunda:assignee="demo">
      <bpmn:extensionElements>
        <camunda:formData>
          <camunda:formField id="latitude" label="Latitude" type="string" defaultValue="-33.9249">
            <camunda:validation>
              <camunda:constraint name="required" />
            </camunda:validation>
          </camunda:formField>
          <camunda:formField id="longitude" label="Longitude" type="string" defaultValue="18.4241">
            <camunda:validation>
              <camunda:constraint name="required" />
            </camunda:validation>
          </camunda:formField>
          <camunda:formField id="temperatureUnit" label="Temperature Unit" type="string" defaultValue="celsius" />
        </camunda:formData>
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_1</bpmn:incoming>
      <bpmn:outgoing>Flow_InputToWeather</bpmn:outgoing>
    </bpmn:userTask>
    <bpmn:sequenceFlow id="Flow_InputToWeather" sourceRef="Activity_InputLocation" targetRef="Activity_GetWeather" />
    <bpmn:serviceTask id="Activity_GetWeather" name="Get Weather" camunda:modelerTemplate="io.catalyst.template.weather-forecast" camunda:modelerTemplateVersion="1" camunda:class="io.catalyst.bridge.CatalystBridge">
      <bpmn:extensionElements>
        <camunda:inputOutput>
          <camunda:inputParameter name="timeout">30</camunda:inputParameter>
          <camunda:inputParameter name="outputMapping">{
  "success": "$.success",
  "statusCode": "$.statusCode",
  "weatherData": "$.responseBody",
  "temperature": "$.responseBody.current.temperature_2m",
  "temperatureUnit": "$.responseBody.current_units.temperature_2m",
  "humidity": "$.responseBody.current.relative_humidity_2m",
  "humidityUnit": "$.responseBody.current_units.relative_humidity_2m",
  "windSpeed": "$.responseBody.current.wind_speed_10m",
  "windSpeedUnit": "$.responseBody.current_units.wind_speed_10m",
  "weatherCode": "$.responseBody.current.weather_code",
  "error": "$.error"
}</camunda:inputParameter>
          <camunda:inputParameter name="payload">{
  "method": "GET",
  "url": "https://api.open-meteo.com/v1/forecast",
  "headers": {},
  "queryParams": {
    "latitude": "-33.9249",
    "longitude": "18.4241",
    "current": "temperature_2m,relative_humidity_2m,wind_speed_10m,weather_code",
    "temperature_unit": "celsius"
  },
  "body": {}
}</camunda:inputParameter>
          <camunda:inputParameter name="webhookUrl">http://catalyst-n8n:5678/webhook/catalyst-http-weather-request</camunda:inputParameter>
        </camunda:inputOutput>
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_InputToWeather</bpmn:incoming>
      <bpmn:outgoing>Flow_2</bpmn:outgoing>
    </bpmn:serviceTask>
    <bpmn:sequenceFlow id="Flow_2" sourceRef="Activity_GetWeather" targetRef="Activity_DisplayWeather" />
    <bpmn:scriptTask id="Activity_DisplayWeather" name="Display Weather" scriptFormat="javascript">
      <bpmn:incoming>Flow_2</bpmn:incoming>
      <bpmn:outgoing>Flow_3</bpmn:outgoing>
      <bpmn:script>// Display weather information using individual process variables
print("=".repeat(50));
print("WEATHER REPORT");
print("=".repeat(50));

var success = execution.getVariable("success");
var statusCode = execution.getVariable("statusCode");
var temperature = execution.getVariable("temperature");
var temperatureUnit = execution.getVariable("temperatureUnit");
var humidity = execution.getVariable("humidity");
var humidityUnit = execution.getVariable("humidityUnit");
var windSpeed = execution.getVariable("windSpeed");
var windSpeedUnit = execution.getVariable("windSpeedUnit");
var weatherCode = execution.getVariable("weatherCode");
var error = execution.getVariable("error");

print("Status: " + (success ? "Success" : "Failed"));
print("Status Code: " + statusCode);

if (temperature != null) {
  print("\nCurrent Weather:");
  print("  Temperature: " + temperature + temperatureUnit);
  print("  Humidity: " + humidity + humidityUnit);
  print("  Wind Speed: " + windSpeed + " " + windSpeedUnit);
  print("  Weather Code: " + weatherCode);
} else {
  print("\nERROR: No weather data available");
  if (error != null) {
    print("Error: " + error);
  }
}

print("=".repeat(50));</bpmn:script>
    </bpmn:scriptTask>
    <bpmn:sequenceFlow id="Flow_3" sourceRef="Activity_DisplayWeather" targetRef="Activity_1dr3ac3" />
    <bpmn:endEvent id="EndEvent_1" name="End">
      <bpmn:incoming>Flow_0n864jt</bpmn:incoming>
    </bpmn:endEvent>
    <bpmn:sequenceFlow id="Flow_0n864jt" sourceRef="Activity_1dr3ac3" targetRef="EndEvent_1" />
    <bpmn:userTask id="Activity_1dr3ac3" name="View Weather in Cockpit" camunda:assignee="demo">
      <bpmn:incoming>Flow_3</bpmn:incoming>
      <bpmn:outgoing>Flow_0n864jt</bpmn:outgoing>
    </bpmn:userTask>
  </bpmn:process>
  <bpmndi:BPMNDiagram id="BPMNDiagram_1">
    <bpmndi:BPMNPlane id="BPMNPlane_1" bpmnElement="weather-forecast-example">
      <bpmndi:BPMNShape id="StartEvent_1_di" bpmnElement="StartEvent_1">
        <dc:Bounds x="152" y="102" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="158" y="145" width="25" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Activity_InputLocation_di" bpmnElement="Activity_InputLocation">
        <dc:Bounds x="240" y="80" width="100" height="80" />
        <bpmndi:BPMNLabel />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Activity_GetWeather_di" bpmnElement="Activity_GetWeather">
        <dc:Bounds x="400" y="80" width="100" height="80" />
        <bpmndi:BPMNLabel />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Activity_DisplayWeather_di" bpmnElement="Activity_DisplayWeather">
        <dc:Bounds x="560" y="80" width="100" height="80" />
        <bpmndi:BPMNLabel />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="EndEvent_1_di" bpmnElement="EndEvent_1">
        <dc:Bounds x="872" y="102" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="880" y="145" width="20" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Activity_02ztcoz_di" bpmnElement="Activity_1dr3ac3">
        <dc:Bounds x="720" y="80" width="100" height="80" />
        <bpmndi:BPMNLabel />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge id="Flow_1_di" bpmnElement="Flow_1">
        <di:waypoint x="188" y="120" />
        <di:waypoint x="240" y="120" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="Flow_InputToWeather_di" bpmnElement="Flow_InputToWeather">
        <di:waypoint x="340" y="120" />
        <di:waypoint x="400" y="120" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="Flow_2_di" bpmnElement="Flow_2">
        <di:waypoint x="500" y="120" />
        <di:waypoint x="560" y="120" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="Flow_3_di" bpmnElement="Flow_3">
        <di:waypoint x="660" y="120" />
        <di:waypoint x="720" y="120" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="Flow_0n864jt_di" bpmnElement="Flow_0n864jt">
        <di:waypoint x="820" y="120" />
        <di:waypoint x="872" y="120" />
      </bpmndi:BPMNEdge>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</bpmn:definitions>